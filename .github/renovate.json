{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [":semanticCommitsDisabled"],
  "enabledManagers": ["github-actions", "pip_requirements"],
  "timezone": "America/New_York",
  "schedule": ["every weekday after 9am before 5pm"],
  "branchConcurrentLimit": 10,
  "labels": ["automerge"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchFileNames": ["MODULE.bazel"],
      "enabled": false
    }
  ],
  "pip_requirements": {
    "fileMatch": ["pydeps/private/requirements.in"],
    "ignorePaths": [
      "examples/demo/requirements.in",
      "examples/demo/requirements.txt",
      "pydeps/private/requirements.txt"
    ],
    "rangeStrategy": "bump"
  }
}
